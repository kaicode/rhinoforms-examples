<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app PUBLIC
		"-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
		"http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

	<display-name>Rhinoforms</display-name>

	<distributable/>

	<servlet>
		<servlet-name>FormServlet</servlet-name>
		<servlet-class>com.rhinoforms.FormServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet>
		<!-- Just for debugging -->
		<servlet-name>TraceServlet</servlet-name>
		<servlet-class>com.rhinoforms.util.TraceServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>DemoResourceServlet</servlet-name>
		<servlet-class>com.rhinoforms.examples.DemoResourceServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>FormServlet</servlet-name>
		<url-pattern>/rhinoforms/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>TraceServlet</servlet-name>
		<url-pattern>/trace</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>DemoResourceServlet</servlet-name>
		<url-pattern>/demo-resource</url-pattern>
	</servlet-mapping>

</web-app>